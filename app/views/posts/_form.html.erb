<style>
  .whatever {
    border: 1px solid red
  }
  </style>  

  <%= form_for @post do |f| %>
  
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <br/>
  <br/>
  
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <br/>
  <br/>
  <%= f.label "Existing Categories:" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |b| %>
    <p>
        <%= b.label :class =>"whatever"%>
        <%= b.check_box %>
    </p>
   <% end %>
    <br/>
   <%= f.fields_for :categories do |category_builder| %>
   <%= category_builder.label "Add New Category" %>
   <%= category_builder.text_field :name %>
   <% end %>
   
  <%= f.submit %>
<% end %>  
